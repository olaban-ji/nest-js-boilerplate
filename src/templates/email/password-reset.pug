    style.
      /* Reset styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
        line-height: 1.6;
        color: #374151;
        background-color: #f9fafb;
        margin: 0;
        padding: 20px 0;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
      }
      
      /* Container */
      .email-container {
        max-width: 650px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid #e5e7eb;
      }
      
      /* Header */
      .header {
        background: linear-gradient(135deg, #3B82F6 0%, #1E40AF 100%);
        color: #ffffff;
        padding: 40px 30px;
        text-align: center;
      }
      
      .logo-section {
        margin-bottom: 24px;
      }
      
      .logo {
        width: 56px;
        height: 56px;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.2);
        padding: 8px;
        margin: 0 auto 16px;
        display: block;
        object-fit: cover;
      }
      
      .company-name {
        font-size: 32px;
        font-weight: 800;
        margin: 0 0 16px 0;
        color: #ffffff;
        letter-spacing: -0.5px;
      }
      
      .security-badge {
        display: inline-block;
        background: rgba(255, 255, 255, 0.25);
        color: #ffffff;
        padding: 12px 24px;
        border-radius: 50px;
        font-size: 16px;
        font-weight: 600;
        border: 2px solid rgba(255, 255, 255, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      
      .security-badge::before {
        content: "üîí ";
        font-size: 16px;
      }
      
      /* Content */
      .content {
        padding: 40px 30px;
        background: #ffffff;
      }
      
      .greeting {
        font-size: 24px;
        font-weight: 700;
        color: #1E40AF;
        margin-bottom: 20px;
        text-align: center;
        letter-spacing: -0.25px;
      }
      
      .user-name {
        color: #1E40AF;
        font-weight: 800;
      }
      
      /* Reset Notice */
      .reset-notice {
        background: #ebf8ff;
        border-radius: 12px;
        padding: 32px;
        margin: 24px 0;
        border-left: 5px solid #3B82F6;
      }
      
      .section-title {
        color: #2563EB;
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: -0.25px;
      }
      
      .section-title.notice::before {
        content: "üîë ";
        font-size: 18px;
      }
      
      .section-title.tips::before {
        content: "üí° ";
        font-size: 18px;
      }
      
      .section-title.support::before {
        content: "ü§ù ";
        font-size: 18px;
      }
      
      .notice-text {
        color: #af1e1eff;
        font-size: 16px;
        line-height: 1.7;
        font-weight: 500;
      }
      
      /* Reset Section */
      .reset-section {
        background: #ffffff;
        border-radius: 12px;
        padding: 32px;
        margin: 24px 0;
        border: 2px solid #f3f4f6;
        text-align: center;
      }
      
      .reset-title {
        color: #1E40AF;
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: -0.25px;
      }
      
      .reset-instruction {
        color: #6B7280;
        font-size: 16px;
        margin-bottom: 24px;
        line-height: 1.7;
        font-weight: 500;
      }
      
      .reset-button {
        display: inline-block;
        background: linear-gradient(135deg, #3B82F6, #1E40AF);
        color: #ffffff;
        padding: 16px 32px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 700;
        font-size: 16px;
        border: none;
        cursor: pointer;
        margin: 16px 0;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        min-width: 220px;
        text-align: center;
      }
      
      .reset-button::before {
        content: "üîì ";
        font-size: 18px;
      }
      
      .reset-button:hover {
        background: linear-gradient(135deg, #2563EB, #1D4ED8);
      }
      
      .info-card {
        background: #f9fafb;
        border-radius: 8px;
        padding: 24px;
        margin-top: 24px;
        border-left: 4px solid #6B7280;
      }
      
      .info-title {
        font-weight: 700;
        color: #6B7280;
        margin-bottom: 12px;
        font-size: 16px;
      }
      
      .info-title::before {
        content: "‚ÑπÔ∏è ";
        font-size: 16px;
      }
      
      .info-text {
        color: #6B7280;
        font-size: 14px;
        line-height: 1.6;
        font-weight: 500;
      }
      
      /* Expiration Notice */
      .expiration-notice {
        background: #fffbeb;
        border-radius: 12px;
        padding: 24px;
        margin: 24px 0;
        border-left: 5px solid #F59E0B;
        text-align: center;
      }
      
      .expiration-title {
        color: #92400E;
        font-weight: 700;
        margin-bottom: 12px;
        font-size: 18px;
        letter-spacing: -0.25px;
      }
      
      .expiration-title::before {
        content: "‚è∞ ";
        font-size: 18px;
      }
      
      .expiration-text {
        color: #92400E;
        font-size: 16px;
        line-height: 1.6;
        font-weight: 600;
      }
      
      /* Security Tips */
      .security-tips {
        background: #ffffff;
        border-radius: 12px;
        padding: 32px;
        margin: 24px 0;
        border: 2px solid #f3f4f6;
      }
      
      .tips-title {
        color: #1E40AF;
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 20px;
        letter-spacing: -0.25px;
      }
      
      .tips-list {
        list-style: none;
        padding: 0;
      }
      
      .tips-list li {
        padding: 12px 0 12px 40px;
        position: relative;
        color: #6B7280;
        font-size: 14px;
        line-height: 1.6;
        font-weight: 500;
        margin-bottom: 8px;
      }
      
      .tips-list li:before {
        content: "üõ°Ô∏è";
        position: absolute;
        left: 0;
        top: 12px;
        font-size: 16px;
        width: 24px;
        height: 24px;
        background: #f0f9ff;
        border-radius: 50%;
        text-align: center;
        line-height: 20px;
        border: 2px solid #dbeafe;
      }
      
      /* Support Section */
      .support-section {
        background: #f8f9fb;
        border-radius: 12px;
        padding: 32px;
        margin: 24px 0;
        border-left: 5px solid #1E40AF;
        text-align: center;
      }
      
      .support-title {
        color: #1E40AF;
        font-size: 18px;
        font-weight: 700;
        margin-bottom: 16px;
        letter-spacing: -0.25px;
      }
      
      .support-text {
        color: #6B7280;
        margin-bottom: 20px;
        font-size: 16px;
        line-height: 1.7;
        font-weight: 500;
      }
      
      .contact-button {
        display: inline-block;
        background: #ffffff;
        color: #1E40AF;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        border: 2px solid #1E40AF;
        min-width: 200px;
        text-align: center;
      }
      
      .contact-button::before {
        content: "üìß ";
        font-size: 16px;
      }
      
      .contact-button:hover {
        background: #f0f9ff;
      }
      
      /* Decorative Elements */
      .decorative-line {
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #3B82F6, #1E40AF);
        margin: 32px auto;
        border-radius: 2px;
      }
      
      /* Footer */
      .footer {
        background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
        color: #ffffff;
        padding: 40px 30px;
        text-align: center;
      }
      
      .signature {
        font-size: 20px;
        margin-bottom: 8px;
        font-weight: 700;
      }
      
      .team-name {
        color: #94a3b8;
        font-size: 16px;
        margin-bottom: 24px;
        font-weight: 500;
      }
      
      .contact-info {
        margin-top: 24px;
      }
      
      .contact-item {
        display: inline-flex;
        align-items: center;
        margin: 8px 16px;
        font-size: 14px;
        color: #94a3b8;
        font-weight: 500;
        text-decoration: none;
        white-space: nowrap;
      }
      
      .contact-item span {
        margin-right: 6px;
      }
      
      .contact-item span:last-child {
        margin-right: 0;
      }
      
      .contact-item:hover {
        color: #ffffff;
      }
      
      .footer-security {
        color: #94a3b8;
        font-size: 14px;
        margin-top: 20px;
        font-style: italic;
        font-weight: 500;
      }
      
      .footer-security::before {
        content: "üîí ";
        font-size: 14px;
      }
      
      /* Mobile Responsive */
      @media screen and (max-width: 600px) {
        body {
          padding: 10px 0;
        }
        
        .email-container {
          margin: 0 10px;
          border-radius: 12px;
        }
        
        .header, .content, .footer {
          padding: 24px 20px;
        }
        
        .company-name {
          font-size: 24px;
        }
        
        .greeting {
          font-size: 20px;
        }
        
        .reset-notice, .reset-section, .security-tips, .support-section {
          padding: 24px 20px;
        }
        
        .reset-button {
          width: 100%;
          max-width: 280px;
          padding: 14px 24px;
          font-size: 14px;
        }
        
        .expiration-notice {
          padding: 20px;
        }
        
        .contact-button {
          width: 100%;
          max-width: 250px;
        }
        
        .tips-list li {
          padding-left: 32px;
          font-size: 13px;
        }
        
        .tips-list li:before {
          width: 20px;
          height: 20px;
          font-size: 14px;
          line-height: 16px;
        }
        
        .contact-item {
          display: block;
          margin: 8px 0;
        }
        
        .security-badge {
          padding: 10px 20px;
          font-size: 14px;
        }
        
        .section-title {
          font-size: 18px;
        }
        
        .reset-title, .support-title, .tips-title {
          font-size: 16px;
        }
        
        .expiration-title {
          font-size: 16px;
        }
      }
      
